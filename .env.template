# Copy this to .env and fill in your values

# Your GitHub organization name
GITHUB_ORG=your-org-name

# Option 1: Registration token (run command below to get it)
# gh api -H "Accept: application/vnd.github+json" /orgs/YOUR_ORG/actions/runners/registration-token --jq '.token'
RUNNER_TOKEN=

# Option 2: Personal Access Token for automatic token refresh (recommended)
# Create at https://github.com/settings/tokens with admin:org scope
GITHUB_PAT=

# Runner configuration (optional customization)
RUNNER_NAME=runner-ephemeral
RUNNER_LABELS=self-hosted,docker,linux,org